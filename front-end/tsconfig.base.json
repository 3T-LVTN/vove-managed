      ],
      "@front-end/application/repositories/app-user": [
        "src/application/repositories/app-user/src/index.ts"
      ],
      "@front-end/application/repositories/user": [
        "src/application/repositories/user/src/index.ts"
      ],
      "@front-end/application/usecases/app-user": [
        "src/application/usecases/app-user/src/index.ts"
      ],
      "@front-end/application/usecases/user": [
        "src/application/usecases/user/src/index.ts"
      ],
      "@front-end/domain/entities/app-user": [
        "src/domain/entities/app-user/src/index.ts"
      ],
      "@front-end/domain/entities/user": [
        "src/domain/entities/user/src/index.ts"
      ],

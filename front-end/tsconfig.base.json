      "@front-end/interface-adapters/controllers/dashboard": [
        "src/interface-adapters/controllers/dashboard/src/index.ts"
      ],
      "@front-end/interface-adapters/controllers/app-user": [
        "src/interface-adapters/controllers/app-user/src/index.ts"
      ],
      "@front-end/interface-adapters/controllers/user": [
        "src/interface-adapters/controllers/user/src/index.ts"
      ],
      "@front-end/interface-adapters/view-models/app-user": [
        "src/interface-adapters/view-models/app-user/src/index.ts"
      ],
      "@front-end/interface-adapters/view-models/user": [
        "src/interface-adapters/view-models/user/src/index.ts"
      ],
      "@front-end/shared/utils": [
        "src/shared/utils/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]

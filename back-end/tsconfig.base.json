{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@back-end/application/configurations": [
        "src/application/configurations/src/index.ts"
      ],
      "@back-end/application/interactors/user": [
        "src/application/interactors/user/src/index.ts"
      ],
      "@back-end/application/repositories/user": [
        "src/application/repositories/user/src/index.ts"
      ],
      "@back-end/application/usecases/user": [
        "src/application/usecases/user/src/index.ts"
      ],
      "@back-end/application/utilities": [
        "src/application/utilities/src/index.ts"
      ],
      "@back-end/domain/dtos/user": [
        "src/domain/dtos/user/src/index.ts"
      ],
      "@back-end/domain/entities/user": [
        "src/domain/entities/user/src/index.ts"
      ],
      "@back-end/domain/shared/query": [
        "src/domain/shared/query/src/index.ts"
      ],
      "@back-end/frameworks-and-drivers/auth-guard": [
        "src/frameworks-and-drivers/auth-guard/src/index.ts"
      ],
      "@back-end/frameworks-and-drivers/configuration": [
        "src/frameworks-and-drivers/configuration/src/index.ts"
      ],
      "@back-end/frameworks-and-drivers/adapter": [
        "src/frameworks-and-drivers/adapter/src/index.ts"
      ],
      "@back-end/frameworks-and-drivers/middleware": [
        "src/frameworks-and-drivers/middleware/src/index.ts"
      ],
      "@back-end/frameworks-and-drivers/mongodb/user": [
        "src/frameworks-and-drivers/mongodb/user/src/index.ts"
      ],
      "@back-end/frameworks-and-drivers/rest-api": [
        "src/frameworks-and-drivers/rest-api/src/index.ts"
      ],
      "@back-end/interface-adapters/controllers/user": [
        "src/interface-adapters/controllers/user/src/index.ts"
      ],
      "@back-end/shared": [
        "src/shared/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
